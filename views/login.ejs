<h1>Login</h1>

<% if(typeof message !== 'undefined'){ %>
<p style="color: red"><%= message %></p>
<% } %>

<form action="" method="POST">
  <input type="email" name="email" placeholder="Enter Email" required />
  <br /><br />
  <input
    type="password"
    name="password"
    placeholder="Enter Password"
    required
  />
  <br /><br />
  <input type="submit" value="Login" />
  <br /><br />
</form>
