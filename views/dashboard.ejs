<%- include('layouts/header.ejs') %>

  <div class="row">
    <div class="col-md-4">
      <ul class="list-group shadow-sm" style="background-color: #e0f2fe">
        <% if(users.length> 0 ){
          for(let i=0;i<users.length;i++){ %>
            <li style = "background-color: #7fc7d977" class="position-relative list-group-item list-group-item-dark cursor-pointer user-list" style="color: #1e293b" data-id="<%= users[i]['_id'] %>">
              <img src="<%=users[i]['photo'] %>" alt="" width="50px" height="50px" class="rounded-circle mr-2">
              <%= users[i]['firstName'] %> <%= users[i]["lastName"] %> 
                <% if(users[i]['is_online']=='1' ){ %>
                  <sup class="online-status position-absolute" style="font-size: 10px; right: 5%; top: 50%;" id="<%= users[i]['_id']%>-status">Online</sup>
                  <% }else { %>
                    <sup class="offline-status position-absolute" style="font-size: 10px; right: 5%; top: 50%;" id="<%= users[i]['_id']%>-status">Offline</sup>
                    <% } %>
            </li>
            <% } } %>
      </ul>
    </div>
    <div class="col-md-8">
      <h3 class="start-head" style="color: rgba(128, 128, 128, 0.596); font-size: 24px"><i>Welcome, <%= user.firstName %> <%= user.lastName %> <br/> Click to start a chat</i> </h3>
      <div class="chat-section">
        <div id="chat-container" class="rounded">



        </div>
        <form action="" id="chat-form">
          <input type="text" name="message" id="message" placeholder="Write a message..." class="border rounded p-2" style="background-color: rgb(233, 226, 226)" required>
          <input type="submit" value="Send message" class="btn btn-primary rounded">
        </form>

      </div>
    </div>

  </div>



  <!-- Modal -->
  <div class="modal fade" id="deleteChatModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Delete Chat</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <form id="delete-chat-form">


          <div class="modal-body">
            <input type="hidden" name="id" id="delete-message-id">
            <p>Are you sure you want to delete below message ?</p>
            <p><b id="delete-message"></b></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-danger">Delete </button>
          </div>

        </form>

      </div>
    </div>
  </div>





  <!--Update Modal -->
  <div class="modal fade" id="editChatModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Edit Chat</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <form id="update-chat-form">
          <div class="modal-body">
            <input type="hidden" name="id" id="edit-message-id">
            <input type="text" name="message" id="update-message" required placeholder="Enter Message">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Update </button>
          </div>

        </form>

      </div>
    </div>
  </div>

  <%- include('layouts/footer.ejs') %>